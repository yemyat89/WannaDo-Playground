<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.yemyatthein.wannado.CreateActivity$PlaceholderFragment">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtNameCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="e.g., Algorithm Study"/>

    <TextView android:text="Description" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/txtDescCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Desc"/>

    <Button
        android:id="@+id/btnAddCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"/>

</LinearLayout>
